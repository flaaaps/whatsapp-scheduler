{
   "name": "wa-test",
   "version": "1.0.0",
   "type": "module",
   "description": "WhatsApp message scheduler with TypeScript",
   "main": "server.js",
   "scripts": {
      "build": "npm run build:remix && npm run build:server",
      "build:remix": "remix vite:build",
      "build:server": "tsup",
      "start": "cross-env NODE_ENV=production node dist/server.js",
      "dev": "cross-env NODE_ENV=development tsx server.ts",
      "clean": "rm -rf build dist",
      "prebuild": "npm run clean",
      "typecheck": "tsc --noEmit",
      "docker:build": "docker compose build",
      "docker:run": "docker compose up",
      "docker:build:run": "docker compose up --build"
   },
   "keywords": [
      "whatsapp",
      "scheduler",
      "baileys",
      "typescript"
   ],
   "author": "",
   "license": "ISC",
   "dependencies": {
      "@radix-ui/react-dialog": "^1.1.15",
      "@radix-ui/react-label": "^2.1.8",
      "@radix-ui/react-select": "^2.2.6",
      "@radix-ui/react-slot": "^1.2.4",
      "@remix-run/express": "^2.17.2",
      "@remix-run/node": "^2.17.2",
      "@remix-run/react": "^2.17.2",
      "@whiskeysockets/baileys": "^7.0.0-rc.6",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "croner": "^9.1.0",
      "cronstrue": "^3.9.0",
      "cross-env": "^10.1.0",
      "express": "^5.1.0",
      "express-basic-auth": "^1.2.1",
      "isbot": "^5.1.32",
      "lucide-react": "^0.552.0",
      "node-cron": "^4.2.1",
      "pg": "^8.16.3",
      "qrcode": "^1.5.4",
      "qrcode-terminal": "^0.12.0",
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "tailwind-merge": "^3.3.1"
   },
   "devDependencies": {
      "@remix-run/dev": "^2.17.2",
      "@tailwindcss/vite": "^4.1.17",
      "@types/express": "^5.0.5",
      "@types/node": "^24.10.0",
      "@types/node-cron": "^3.0.11",
      "@types/pg": "^8.15.6",
      "@types/qrcode": "^1.5.6",
      "@types/qrcode-terminal": "^0.12.2",
      "@types/react": "^19.2.2",
      "@types/react-dom": "^19.2.2",
      "autoprefixer": "^10.4.21",
      "prettier": "^3.6.2",
      "tailwindcss": "^4.1.17",
      "tailwindcss-animate": "^1.0.7",
      "tsup": "^8.5.0",
      "tsx": "^4.20.6",
      "tw-animate-css": "^1.4.0",
      "typescript": "^5.9.3",
      "vite": "^6.4.1",
      "vite-tsconfig-paths": "^5.1.4"
   }
}
